
<div  style="margin: 30px 0 30px;">
    <div class="container">
        <div class="row">
            <img src="<%= orderInfo.imgSource %>" class="col-4 d-none d-sm-block pic">        
            <div class=" col-12 col-sm-8 container justify-content-center orderBox" id=""><!-- <<  order box-->
                <div class="row justify-content-center">
                    <div class="row col-md-10 col-xs-12" >
                        <h1 class="col-5 farBottom">Table <%= orderInfo.table %></h1>
                        <p class="col-7" style="text-align: right;">status: <span class="<%= orderInfo.status %>"><%= orderInfo.status %></span></p>
                    </div>
                    <div class="row col-md-10 col-xs-12 justify-content-center">
                            <!-- order list -->
                        <div class="row">
                            <p class="menuName2 col-8"><%= orderInfo.menuName %></p>
                            <p class="menuName2 price col-4"><%= orderInfo.price %></p>
                        </div>
                        <div class="container">
                            <ul>
                                <% orderInfo.remark.forEach(function(remark){ %>
                                    <li><%= remark %></li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                    <% if(orderInfo.status == "queue" || orderInfo.status == "cooking"){ %>
                        <div class="row col-md-10 col-xs-12 justify-content-end">
                            <button type="submit" class="btn changeBtn">Change status</button>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>