<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link href="/css/style.css" rel="stylesheet">
        <title>Kitchen UI</title>
    </head>
    <body>
        <nav class="navbar fixed-top navbar-default">
            <div class="container justify-content-center" >
                <a href="#"><h1 id="restaurantName">B&J kitchen</h1></a>
            </div>
        </nav>
        <!-- order list -->
        <div class="container-md"></div>
            <!-- sort status -->
            <div class="container" style="text-align: right;">
                <p class="sorter">sort by: 
                    <a class="sorter" href="/resort" > 
                        <% if(sort){ %>status <% }else{ %>date <% } %>
                    </a>
                </p>
            </div>
            <!-- dynamic order list -->
            <% if(sort){ %>
                <!-- sort by status -->
                <% var unavailable = true %> 
                    <div class="container-md fitContent">
                        <span class="dotCooking">&#x25CF</span>                        
                        <h1>&nbsp Cooking</h1>
                    </div>
                <% orderList.forEach( function(orderList){ %>
                    <% if(orderList.status == "cooking"){ %>
                        <%- include("partials/order",{ orderInfo: orderList });%>
                        <% unavailable = false %> 
                    <% } %>
                <% }); %>
                <% if(unavailable){ %>
                    <p class="noOrder">There is no order in this category</p>
                <% }else{ unavailable = true } %> 
                    <div class="container-md fitContent">
                        <span class="dotQueue">&#x25CF</span>                        
                        <h1>&nbsp Queue</h1>
                    </div>
                <% orderList.forEach( function(orderList){ %>
                    <% if(orderList.status == "queue"){ %>
                        <%- include("partials/order",{ orderInfo: orderList });%>
                        <% unavailable = false %> 
                    <% } %>
                <% }); %>
                <% if(unavailable){ %>
                    <p class="noOrder">There is no order in this category</p>
                <% }else{ unavailable = true } %> 
                    <div class="container-md fitContent">
                        <span class="dotServed">&#x25CF</span>                        
                        <h1>&nbsp Served</h1>
                    </div>
                <% orderList.forEach( function(orderList){ %>
                    <% if(orderList.status == "served"){ %>
                        <%- include("partials/order",{ orderInfo: orderList });%>
                        <% unavailable = false %> 
                    <% } %>
                <% }); %>
                <% if(unavailable){ %> 
                    <p  class="noOrder">There is no order in this category</p>
                <% }else{ unavailable = true } %> 
                    <div class="container-md fitContent">
                         <span class="dotCanceled">&#x25CF</span>                       
                        <h1>&nbsp Canceled</h1>
                    </div>
                <% orderList.forEach( function(orderList){ %>
                    <% if(orderList.status == "canceled"){ %>
                        <%- include("partials/order",{ orderInfo: orderList });%>
                        <% unavailable = false %> 
                    <% } %>
                <% }); %>
                <% if(unavailable){ %> 
                    <p  class="noOrder">There is no order in this category</p>
                <% }else{ unavailable = true } %>
            <% }else{ %>
                <!-- sort by date -->
                <% orderList.forEach( function(orderList){ %>
                    <%- include("partials/order",{ orderInfo: orderList });%>
                <% }); %>
            <% } %>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>